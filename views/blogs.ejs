<%- include("partials/header"); -%>
    <div style="padding:0% 15% 0% 15%;">
        <h1>Posts</h1>
        <%blogs.forEach((blog)=> {%>
            <div>
                <h2>
                    <%=blog.title%>
                </h2>
                <img src="<%=blog.image%>">
                <span>Created: <%=blog.created%></span>
                <span>Created: <%=blog.body.substring(0, 300)%></span>
                <a href='/blogs/<%=blog._id%>'>Read more</a>
            </div>
            <% })%>
    </div>
    <%- include("partials/footer"); -%>